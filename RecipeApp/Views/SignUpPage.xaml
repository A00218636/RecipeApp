<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RecipeApp.Views.SignUpPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Recipe App! Please Sign up."
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Entry Placeholder="Username" PlaceholderColor="Olive" MaxLength="10"></Entry>
            <Entry Placeholder="Password" PlaceholderColor="Olive" IsPassword="True" MaxLength="10"></Entry>
            <Entry Placeholder="Confirm Password" PlaceholderColor="Olive" IsPassword="True" MaxLength="10"></Entry>
            <Button BackgroundColor="Orange" Text="Sign Up"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>